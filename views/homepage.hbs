<h1>Home Page</h1>
<h2>Best pizzas in town!</h2>

<img src="/images/home.jpeg" alt="Tasty Pizzas">

<section>
    <h3>Search by price:</h3>

    <form method="GET" action="/pizzas">

        <label>Enter max price:
            <input type="number" min="1" max="20" name="maxPrice">
        </label>
        <button type="submit">Search</button>

    </form>

</section>

<section>
    <h3>Login:</h3>

    <form method="POST" action="/login">
        <label>
            Enter your email:
            <input type="email" name="email">
        </label>

        <label>
            Enter your password:
            <input type="password" name="pwd">
        </label>

        <button type="submit">Search</button>

    </form>

</section>

