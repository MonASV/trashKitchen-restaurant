
<section class="product-details">

<h1>{{title}}</h1>

{{#if price}}
<h2>Only for {{price}} euro!</h2>
{{else}}
<h2>Price upon request</h2>
{{/if}}

<ul>
    {{#each ingredients}}
    <li>{{this.ingredientName}}</li>
    {{/each}}
</ul>

{{log ingredients.}}

<h2>Taste better with {{recommendedDrink}} </h2>
<img src="/images/{{imageFile}}" alt="{{imageFile}}">

</section>